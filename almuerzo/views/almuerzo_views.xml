<odoo>
    <!-- Form view-->
    <record id="view_form_almuerzo" model="ir.ui.view">
        <field name="name">Almuerzo Form</field>
        <field name="model">almuerzo.almuerzo</field>
        <field name="arch" type="xml">
            <form string="Registro de almuerzo" edit="true">
                <group name="group_top">
                    <group name="group_left">
                        <field name="cedula"/>
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="quantity"/>
                    </group>

                    <group name="group_right">
                        <field name="contact_object" invisible="1"/>
                        <field name="from_date" attrs="{'invisible' : [('contact_object', '=', False)]}"/>
                        <field name="date_to" attrs="{'invisible' : [('contact_object', '=', False)]}"/>
                    </group>
                </group>
            </form>
        </field>
    </record>

    <!--list view -->
    <record id="view_tree_almuerzo" model="ir.ui.view">
        <field name="name">Almuerzo List</field>
        <field name="model">almuerzo.almuerzo</field>
        <field name="arch" type="xml">
            <tree edit="false">
                <field name="cedula"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="quantity"/>
                <field name="from_date"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>
</odoo>