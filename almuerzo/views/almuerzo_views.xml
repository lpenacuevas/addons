<odoo>
    <record>
        <record id="view_almuerzo_form" model="ir.ui.view">
        <field name="name">almuerzo.action.form</field>
        <field name="model">almuerzo</field>
        <field name="arch" type="xml">
            <form string="Registro de almuerzo" edit="true">
                <!-- <field name="cedula"/> -->
                    <group name="group_top">
                        <group name="group_left">
                            <field name="cedula"/>
                            <field name="name"/>
                            <field name="last_name"/>
                            <field name="quantity"/>
                        </group>
                        
                        <group name="group_right">
                            <field name="from_date"/>
                            <field name="date_to"/>
                        </group>
                    </group>
                
