<odoo>
    <!--Vista de form-->
    <record id="view_visitantes_form" model="ir.ui.view">
        <field name="name">visitantes.action.form</field>
        <field name="model">visitante</field>
        <field name="arch" type="xml">
            <form string="Registro de visitantes" edit="true">
                <header>
                    <!-- <button name="staff_action_done" type="object" string="Confirmar" class="btn btn-primary" attrs="{'invisible': [('state', '!=', 'open')]}" groups="staffaction.staff_group_admin" />
                    <button name="staff_action_cancel" type="object" string="Cancelar" class="btn btn-secondary" attrs="{'invisible': [('state', '!=', 'open')]}" groups="staffaction.staff_group_admin" />
                    <field name="state" invisible="True"/>
                    <field name="stage_id" widget="statusbar" options="{'clickable': False, 'fold_field': 'fold'}"/> -->
                    <!-- <button name="button_done" type="object" string="Return" states="open" class="oe_highlight"/> -->
                </header>
                <sheet>                    
                    <field name="potho" widget="image" class="oe_avatar" options="{preview_image:avatar_128}"/>
                    <div class="oe_title">
                            <h2 class="d-flex">
                             <field name="name" placeholder="No cedula" required="True"/>
                            </h2>
                    </div>
                    <group>
                        <group>                           
                            <field name="first_name" string="Nombre" readonly="True"/>
                        </group>
                        <group>
                            <field name="last_name" string="Apellido" readonly="True"/>
                            <!-- <field name="category_id" widget="many2many_tags" options="{'color_field': 'color', 'no_create_edit': True}" readonly="true"/> -->
                        </group>
                    </group>
                    <notebook>
                        <page id="invoice_tab" string="Empleado a Visitar">

                            <field name="employee_id" widget="section_and_note_one2many" mode="tree,kanban" />
                            <field name="department_id" widget="section_and_note_one2many" readonly="True" mode="tree,kanban" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
     <record id="view_tree_tags_visitante" model="ir.ui.view">
        <field name="name">tag visitante list</field>
        <field name="model">tags.visitante</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
              <field name="name"/>
              <field name="color" widget="color_picker"/>
            </tree>
        </field>
    </record>
     <record id="visitantes_search_filtro" model="ir.ui.view">
        <field name="name">visitantes_search</field>
        <field name="model">visitante</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                 <separator/>
                <field name="first_name"/> 
                <field name="state" operator="child_of"/>
                <separator/>
                           
            </search>
        </field>
    </record>
    <!--list view -->
    <record id="view_tree_visitantes" model="ir.ui.view">
        <field name="name">visitantes.List</field>
        <field name="model">visitante</field>
        <field name="arch" type="xml">
            <tree edit="false">
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="state" string="Estado" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="create_date" string="fecha entrada"/>
                <field name="write_date" string="fecha salida"/>
                <field name="duration" widget="float_time" string="Duration" class="oe_inline"/></tree>
        </field>
    </record>
   
</odoo>
